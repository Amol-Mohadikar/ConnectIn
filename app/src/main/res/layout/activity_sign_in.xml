<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89A8F3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="119dp"
            android:layout_height="111dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="13dp"
            app:srcCompat="@drawable/ic_userspeople" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bggetmsgwhite"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="9dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bggetmsgwhite"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:padding="9dp" />

        <TextView
            android:id="@+id/tvclicksignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="8dp"
            android:text="Sign Up"
            android:textColor="#090909"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="12dp"
            android:text="sign In"
            android:textStyle="bold"
            app:backgroundTint="#7820F1"
            app:cornerRadius="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_facebook"
                android:padding="12dp"
                android:text="Continue with facebook"
                app:backgroundTint="#1E2F91"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_google_icon"
                android:padding="12dp"
                android:text="continue with google"
                android:textColor="#0B0A0A"
                app:backgroundTint="#EDE6E6"
                app:cornerRadius="5dp" />

            <TextView
                android:id="@+id/tvforgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="Forgot your password ?"
                android:textColor="#30026E"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>